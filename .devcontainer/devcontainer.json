{
    "name": "Advanced Lecture Base App",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    // 1. Install Python dependencies
    // 2. Install Playwright browsers (for Headless agent operation)
    "postCreateCommand": "pip install -r requirements.txt && playwright install --with-deps",
    // Set `remoteUser` to `vscode` to use the default user.
    "remoteUser": "vscode",
    // Port Forwarding
    "forwardPorts": [
        5000
    ]
}